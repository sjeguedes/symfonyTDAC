{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
        </div>
    </div>
    <div class="row">
        {% for task in view_model.tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4 mb clearfix">
            <div class="thumbnail mt">
                <div class="caption">
                    <h4 class="pull-right">
                        <span class="glyphicon glyphicon-{{ task.isDone ? 'ok': 'remove' }}"></span>
                    </h4>
                    <h4><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                    <p>{{ task.content }}</p>
                </div>
                <div>
                    {# Added toggle form managed by Symfony as a better practice! #}
                    {% set toggle_form = view_model.toggleTaskFormViews[task.id] %}
                    {{ form_start(toggle_form, {'action' : path('task_toggle', {'id' : task.id }) }) }}
                        {# No field to display at this time but maybe errors #}
                        <div class="ml mr">{{ form_widget(toggle_form) }}</div>
                        <button type="submit" id="toggle-task-{{ task.id }}" class="btn btn-success btn-sm pull-right">
                            Marquer {{ false == task.isDone ? 'comme faite': 'comme non terminée' }}
                        </button>
                    {{ form_end(toggle_form) }}
                    <form action="{{ path('task_delete', {'id' : task.id }) }}">
                        <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
        {# Clean lines of 3 tasks closing row #}
        {% if loop.index % 3 == 0 %}
    </div>
    <div class="row">
        {% endif %}
        {# No task to show #}
        {% else %}
        <div class="alert alert-warning" role="alert">
            Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
        </div>
        {% endfor %}
    </div>
{% endblock %}
